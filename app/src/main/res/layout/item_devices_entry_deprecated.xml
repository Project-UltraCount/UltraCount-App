<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_devices_entry_key"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:gravity="center"
        android:text="test"
        android:textColor="@color/colorDarkGrey"
        android:textSize="@dimen/size_text_medium_15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.05"/>

    <ImageView
        android:id="@+id/tv_devices_can_edit"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginStart="5dp"
        app:layout_constraintStart_toEndOf="@id/tv_devices_entry_key"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/ic_can_edit"
        android:tint="@color/colorGrey"
        android:tintMode="src_in" />

    <TextView
        android:id="@+id/tv_devices_entry_colon"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text=":"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@color/colorDarkGrey"
        android:textSize="@dimen/size_text_medium_15sp"
        android:fontFamily="sans-serif-black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.4"/>

    <TextView
        android:id="@+id/tv_devices_entry_value"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/tv_devices_entry_colon"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@color/colorMyTheme"
        android:textSize="@dimen/size_text_medium_15sp"
        android:fontFamily="sans-serif-black"
        android:layout_marginStart="10dp"/>

    <View
        style="@style/HorizontalDivider"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>