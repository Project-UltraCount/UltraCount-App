<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_my_dropdowm_window_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:elevation="3dp">
        <View
            android:id="@+id/v_my_dropdown_window_above"
            style="@style/HorizontalDivider"/>

        <ImageView
            android:id="@+id/iv_my_dropdown_window_img"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:tint="@color/colorMyTheme"
            android:src="@drawable/ic_menu_stat"
            android:layout_marginStart="15dp"/>

        <TextView
            android:id="@+id/tv_my_dropdown_window_title"
            android:layout_marginStart="10dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="MyDropdownWindow"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/size_text_medium_15sp"
            android:gravity="center_vertical"
            android:layout_toEndOf="@id/iv_my_dropdown_window_img"
            android:layout_below="@id/v_my_dropdown_window_above"/>

        <ImageView
            android:id="@+id/iv_my_dropdown_window_arrow"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="20dp"
            android:src="@drawable/ic_down_arrow"
            android:layout_centerVertical="true"/>

        <View
            style="@style/HorizontalDivider"
            android:layout_below="@id/tv_my_dropdown_window_title"
            android:elevation="1dp"/>

    </RelativeLayout>

    <FrameLayout
        android:id="@+id/fl_my_dropdown_window_window"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:orientation="vertical"
        android:visibility="gone"/>

    <View
        android:id="@+id/v_my_dropdown_window_below"
        style="@style/HorizontalDivider"
        android:visibility="gone"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"/>

</LinearLayout>