<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/rl_my_dropdowm_window_bar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    android:elevation="1dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <View
        android:id="@+id/v_settings_page_switch_above"
        style="@style/HorizontalDivider" />

    <ImageView
        android:id="@+id/iv_settings_page_switch_img"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="15dp"
        android:src="@drawable/ic_menu_stat"
        android:tint="@color/colorMyTheme" />

    <TextView
        android:id="@+id/tv_settings_page_switch_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/v_settings_page_switch_above"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@id/iv_settings_page_switch_img"
        android:gravity="center_vertical"
        android:text="Setting"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/size_text_medium_15sp" />

    <Switch
        android:id="@+id/s_settings_page_switch_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="20dp"
        android:buttonTint="@color/colorAccent"/>

    <View
        style="@style/HorizontalDivider"
        android:layout_below="@id/tv_settings_page_switch_title" />

</RelativeLayout>
