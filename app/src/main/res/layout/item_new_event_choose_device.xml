<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_item_new_event_choose_device_name"
        android:layout_width="wrap_content"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:textSize="@dimen/size_text_big_18sp"
        android:text="device name"
        android:textColor="@color/colorMyTheme"
        />

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="10dp"
        android:background="@color/colorGrey"/>


    <CheckBox
        android:id="@+id/cb_item_new_event_choose_device_inflow"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:text="@string/inflow"
        android:textColor="@color/colorDarkGrey"
        android:textSize="@dimen/size_text_big_18sp"/>

    <CheckBox
        android:id="@+id/cb_item_new_event_choose_device_outflow"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"

        android:paddingStart="10dp"
        android:paddingEnd="10dp"

        android:text="@string/outflow"
        android:textColor="@color/colorDarkGrey"
        android:textSize="@dimen/size_text_big_18sp"/>
</LinearLayout>